<Window x:Class="FootballMatches.BetWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:FootballMatches"
        mc:Ignorable="d"
        Title="BetWindow" Height="450" Width="800">
    <Window.DataContext>
        <vm:MatchesVM />
    </Window.DataContext>
    <Grid>
        <Button x:Name="btnTeam1" Content="{Binding Path=ChosenMatch.FirstTeam.Name}" HorizontalAlignment="Left" Margin="164,192,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="btnTeam2" Content="{Binding Path=ChosenMatch.SecondTeam.Name}" HorizontalAlignment="Left" Margin="509,192,0,0" VerticalAlignment="Top" Width="75"/>
        <Label Content="WHO WILL WIN?" HorizontalAlignment="Center" Margin="300,70,314.6,0" VerticalAlignment="Top" Height="46" Width="179" FontWeight="Bold" FontSize="20"/>

    </Grid>
</Window>
